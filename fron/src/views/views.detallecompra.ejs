<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./css/style.css">
    <title>Document</title>
</head>
<body>

<%- include("partials/partials.dash.header.ejs", { datos: datos, data: data }) %>

<section class="content">

    <!-- Listing Section -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Detalle de Compras</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fa fa-minus"></i></button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fa fa-times"></i></button>
            </div>
        </div>
        <div class="box-body">
            <table border="1">
                <tr>
                    <th>iddetalle</th>
                    <th>idcompra</th>
                    <th>idproducto</th>
                    <th>cantidad</th>
                    <th>precio</th>
                    <th>Opciones</th>
                </tr>
                <% data.forEach(function(registro) { %>
                <tr>
                    <td><%= registro.iddetalle %></td>
                    <td><%= registro.idcompra %></td>
                    <td><%= registro.idproducto %></td>
                    <td><%= registro.cantidad %></td>
                    <td><%= registro.precio %></td>
                    <td data-label="Opciones">
                        <button class="btn btn bg-red" data-toggle="modal" data-target="#modal-buy" onclick="cargarCompras(event);">Comprar</button>
                    </td>
                </tr>
                <% }) %>
            </table>
            <input type="hidden" id="iddetalle">
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->

    <!-- Creation Section -->
    <div class="box">
        <div class="box-header with-border bg-navy">
            <h3 class="box-title">Crear Compra</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse">
                    <i class="fa fa-minus"></i></button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="" data-original-title="Remove">
                    <i class="fa fa-times"></i></button>
            </div>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="idcompra">ID Compra</label>
                        <input type="text" id="idcompra" class="form-control" placeholder="Insertar ID Compra">
                    </div>
                    <div class="form-group">
                        <label for="idproducto">ID Producto</label>
                        <input type="text" class="form-control" id="idproducto" placeholder="Insertar ID Producto">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="cantidad">Cantidad</label>
                        <input type="text" class="form-control" id="cantidad" placeholder="Insertar Cantidad">
                    </div>
                    <div class="form-group">
                        <label for="precio">Precio</label>
                        <input type="text" class="form-control" id="precio" placeholder="Insertar Precio">
                    </div>
                </div>
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button class="btn btn-app bg-purple" onclick="crearCompra();">
                <i class="fa fa-save"></i> Guardar
            </button>
        </div>
        <!-- /.box-footer-->
    </div>
    <!-- /.box -->

</section>
<!-- /.content -->

<div class="control-sidebar-bg"></div>
<div class="modal modal-success fade" id="modal-buy">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title bg-navy">Comprar Producto</h4>
            </div>
            <div class="modal-body">
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="iddetalle">Compra</label>
                                <input type="text" id="iddetalle" class="form-control" placeholder="Insertar Producto" autocomplete="iddetalle">
                            </div>
                            <div class="form-group">
                                <label for="idcompra">ID Compra</label>
                                <input type="text" class="form-control" id="idcompra" placeholder="Insertar ID Compra" autocomplete="idcompra">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="idproducto">ID Producto</label>
                                <input type="text" class="form-control" id="idproducto" placeholder="Insertar ID Producto" autocomplete="idproducto">
                            </div>
                            <div class="form-group">
                                <label for="cantidad">Cantidad</label>
                                <input type="text" class="form-control" id="cantidad" placeholder="Cambiar Cantidad" autocomplete="cantidad">
                            </div>
                            <div class="form-group">
                                <label for="precio">Precio</label>
                                <input type="text" class="form-control" id="precio" placeholder="Cambiar Precio" autocomplete="precio">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline pull-left" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-outline" onclick="comprarProducto();">Comprar</button>
            </div>
        </div>
    </div>
</div>

<script src="./js/comprasdetalle.js"></script>
<%- include("partials/partials.dash.footer.ejs") %>

</body>
</html>
