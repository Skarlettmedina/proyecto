<%- include("partials/partials.dash.header.ejs", {datos : datos})  %>

<section class="content">

    <!-- Default box -->
    <div class="box">
      <div class="box-header with-border bg-navy">
        <h3 class="box-title">Crear Usuario</h3>

        <div class="box-tools pull-right">
          <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse">
            <i class="fa fa-minus"></i></button>
          <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="" data-original-title="Remove">
            <i class="fa fa-times"></i></button>
        </div>
      </div>
      <div class="box-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                  <label for="usuario">Usuario</label>
                    <input type="text" id="usuario" class="form-control" placeholder="Insertar Usuario">
                  </div>
                  <div class="form-group">
                    <label for="email">Correo</label>
                    <input type="email" class="form-control" autocomplete="email" id="email" placeholder="Insertar Correo">
                  </div>
                  <div class="form-group">
                    <label for="roles">Asignar Rol</label>
                    <select class="opciones" id="roles" autocomplete="roles" placeholder="Insertar Rol">
                      <option selected>Roles</option>
                      <option>Administrador</option>
                      <option>Usuario</option>
                    </select>
                  </div>
                
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="contrasena">Contrase単a</label>
                    <input type="password" class="form-control" id="contrasena" placeholder="Insertar Contrase単a">
                  </div>
                  <div class="form-group">
                    <label for="vcontrasena">Verificar Contrase単a</label>
                    <input type="password" class="form-control" id="vcontrasena" placeholder="Verificar Contrase単a">
                  </div>
                  
            </div>
        </div>
      </div>
      
      <!-- /.box-body -->
      <div class="box-footer">
        <button class="btn btn-app bg-purple" onclick="registrarUsuario();">
            <i class="fa fa-save"></i> Guardar
        </button>
      </div>
      <!-- /.box-footer-->
    </div>
    <!-- /.box -->

  </section>
  <script src="./js/main.js"></script>


