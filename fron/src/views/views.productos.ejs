                        <input type="text" id="nombrep" class="form-control" placeholder="Insertar Producto">
                      </div>
                      <div class="form-group">
                        <label for="color">Color</label>
                        <input type="text" class="form-control" id="color" placeholder="Insertar Color">
                      </div>
                    
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="precio">Precio</label>
                        <input type="text" class="form-control" id="precio" placeholder="Insertar Precio">
                    </div>
                </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-outline pull-left" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-outline" onclick="modificarProducto();">Guardar</button>
        </div>
      </div>
