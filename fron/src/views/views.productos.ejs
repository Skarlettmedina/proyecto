  <%- include("partials/partials.dash.header.ejs", { datos: datos, data: data }) %>

  <section class="content">
      <div class="box">
          <div class="box-header with-border bg-navy">
              <h3 class="box-title">Lista de Productos</h3>
              <div class="box-tools pull-right">
                  <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                      <i class="fa fa-minus"></i>
                  </button>
                  <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                      <i class="fa fa-times"></i>
                  </button>
              </div>
          </div>
          <div class="box-body">
              <div class="tableproducto">
                  <div class="table-responsive">
                    <div class="info-box bg-purple">
                        <span class="info-box-icon"><i class="fa fa-fw fa-cubes"></i></span>
                        <div class="info-box-content">
                            <span class="info-box-text">Stok</span>
                            <span class="info-box-number"><%= data.length %></span>
                        </div>
                    </div>

                      <table border="1">
                          <thead>
                              <tr>
                                <th>NÂ° Productos</th>
                                <th hidden>Id</th>
                                <th>Nombre</th>
                                <th>Color</th>
                                <th>Precio</th>
                                <th>Opciones</th>
                              </tr>
                          </thead>
                          <tbody>
                              <% data.forEach(function(registro) { %>
                                <% let contadorp = 1; %>
                              <tr>
                                <td><%= contadorp %></td> <!-- Mostrando el contador -->
                                <td data-label="Id" hidden><%= registro.idproducto %></td>
                                <td data-label="Nombre"><%= registro.nombrep %></td>
                                <td data-label="Color"><%= registro.color %></td>
                                <td data-label="Precio"><%= registro.precio %></td>
                                <td data-label="Opciones">
                                    <button class="btn btn bg-purple" data-toggle="modal" data-target="#modal-warning" onclick="cargarProducto(event);">Modificar</button>
                                    <button class="btn btn bg-navy" id="elimina" onclick="eliminarProducto(event);">Eliminar</button>
                                  </td>
                                </tr>          
                                <% contadorp++; %>
                              <% }) %>
                          </tbody>
                      </table>
                  </div>
                  <input type="hidden" id="idproducto">
              </div>
          </div>
      </div>
  </section>
  
  <div class="control-sidebar-bg"></div>
  
  <div class="modal modal-warning fade" id="modal-warning">
      <div class="modal-dialog">
          <div class="modal-content">
              <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                  </button>
                  <h4 class="modal-title">Modificar Producto</h4>
              </div>
              <div class="modal-body">
                  <div class="box-body">
                      <div class="row">
                          <div class="col-md-6">
                              <div class="form-group">
                                  <label for="nombrep">Producto</label>
                                  <input type="text" id="nombrep" class="form-control" placeholder="Insertar Producto" autocomplete="nombrep">
                              </div>
                              <div class="form-group">
                                  <label for="color">Color</label>
                                  <input type="text" class="form-control" id="color" placeholder="Insertar Color" autocomplete="color">
                              </div>
                          </div>
                          <div class="col-md-6">
                              <div class="form-group">
                                  <label for="precio">Precio</label>
                                  <input type="text" class="form-control" id="precio" placeholder="Insertar Precio" autocomplete="precio">
                              </div>
                          </div>
                      </div>
                  </div>
              </div>
              <div class="modal-footer">
                  <button type="button" class="btn btn-outline pull-left" data-dismiss="modal">Close</button>
                  <button type="button" class="btn btn-outline" onclick="modificarProducto();">Guardar</button>
              </div>
          </div>
      </div>
  </div>
  
  <script src="./js/productos.js"></script>
  
  <%- include("partials/partials.dash.footer.ejs") %>
        
  
